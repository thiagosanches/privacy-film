{
    "manifest_version": 3,
    "name": "Privacy-Film",
    "description": "V0",
    "version": "1.0",
    "action": {
        "default_title": "Privacy-Film",
        "default_popup": "scripts/popup.html"
    },
    "host_permissions": [
        "https://mail.google.com/chat/u/*",
        "https://chat.google.com/u/0/*"
    ],
    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/chat/u/*",
                "https://chat.google.com/u/0/*"
            ],
            "css": [
                "fake.css"
            ],
            "all_frames": true
        }
    ]
}