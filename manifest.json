{
    "manifest_version": 3,
    "name": "Privacy-Film",
    "description": "V0",
    "version": "1.0",
    "action": {
        "default_title": "Privacy-Film",
        "default_popup": "scripts/popup.html"
    },
    "host_permissions": [
        "https://mail.google.com/chat/u/*",
        "https://chat.google.com/u/0/*"
    ],
    "background": { 
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage"
    ]
}
